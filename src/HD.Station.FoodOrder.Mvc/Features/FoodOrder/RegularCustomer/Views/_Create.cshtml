@model RegularCustomerEditViewModel
<div class="row">
    <div class="col-md-5 row-md-9">
        <button type="button" class="btn btn-primary-outline" data-toggle="modal" data-target="#modalCreate" icon-name="action-create">
            <i></i> Add RegularCustomer
        </button>
    </div>    
    @*<div class="col-sm-5 text-right">
        Ngày: <span id="datetime"> </span>
        <script>
            var dt = new Date();
            document.getElementById("datetime").innerHTML = dt.toLocaleString();
        </script>
    </div>*@
</div>
<div class="modal fade" id="modalCreate" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="create-new">Thêm Menu</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="target" name="Create" asp-action="Create">
            <div class="modal-body">
                <div class="container">
                    
                        <div class="row">
                            <div class="col-md-6">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                      <label for="CreatedUser">@Localizer["Created User"]:</label>
                                      @Html.TextBoxFor(m => m.CreatedUser, new { @class = "form-control" })
                                        <span class="field-validation-valid" data-valmsg-for="CreatedUser" data-valmsg-replace="true"></span>
                                </div>
                                <div class="form-group">
                                     <label for="CustomerId">@Localizer["CustomerId"]:</label>
                                     <select asp-for="CustomerId" asp-items="@Model.Customers" class="form-control" size="6"></select>
                                     <span class="field-validation-valid" data-valmsg-for="CustomerId" data-valmsg-replace="true"></span>
                                </div>
                            </div>
                            
                        </div>
                    
                </div>
            </div>
            </form>
            <div class="modal-footer" >
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary" id ="other">
                    <span class="icon icon-action-save"></span>
                    [Save changes]
                </button>
            </div>
            <script>
                require(["jquery",'kendo.grid.min', 'kendo.aspnetmvc.min'], function ($)
                {
                $("#other" ).click(function() {
                $("#target" ).submit();

                });
                 });

            </script>
        </div>
    </div>
</div>